 year = {2016},
 isbn = {978-1-4503-4124-0},
 location = {Reno, Nevada, USA},
 pages = {25--32},
 numpages = {8},
 url = {http://doi.acm.org/10.1145/2982142.2982177},
 doi = {10.1145/2982142.2982177},
